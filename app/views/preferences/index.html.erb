<p id="notice"><%= notice %></p>



<div class="container">
  <div class="row">
    <div class="browse-listing col-xs-12">
      <h2 class="centered centered-title" style="color: #797979">LISTING PREFERENCES</h2>
      <br>
      <br>
      <br>
      <br>
      <div class="review-list">
        <ul class="review-table">
          <% @preferences.each do |preference| %>
          
          <li id="review-slot">
            <div class="review-slot-about">
              <div class="post-slot-name post-slot-column">
                <h3 class="post-slot-owner-name"><%= preference.name %></h3>
              </div>
              
              <div class="post-slot-type post-slot-column">
                <div class="post-slot-button "><%= link_to 'SHOW', preference , class: "btn btn-primary btn-success", style: "font-weight: bold"%></div>
                <div class="post-slot-button "><%= link_to 'EDIT', edit_preference_path(preference), class: "btn btn-primary btn-info", style: "font-weight: bold" %></div>
                <div class="post-slot-button "><%= link_to 'DESTROY', preference, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-primary btn-danger", style: "font-weight: bold" %></div>
              </div>
            </div>
          
          </li>
          <% end %>

        </ul>
      </div>
    </div>
  </div>
</div>